---
interface Props {
    title: string;
}

const { title } = Astro.props;
---


<h2
class="mt-6 mb-4 text-4xl font-extrabold text-gray-900 dark:text-white md:text-6xl lg:text-6xl text-center w-full "
>
<span
  class="text-transparent bg-clip-text bg-gradient-to-r to-red-600 from-gray-600"
  >{title}</span
>
</h2>